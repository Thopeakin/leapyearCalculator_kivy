<Frame>
    canvas:
        Color:
            rgba: 1, 1 ,1 , 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 1, .6
        Rectangle:
            size: self.width, 65
            pos: 0, root.height * 0.89
        Color:
            rgba: 1 ,1, 1, 1
        Line:
            points: 0, 0, 0, root.height, root.width, root.height, root.width, 0
            width: 4
            close: True
    Label:
        text: 'Leap Year Calculator'
        font_size: 40
        size_hint: None, None
        size: self.texture_size
        pos: root.width/2 - self.width/2, root.height - self.height - 10
    Label:
        color: 0, 0, 0, .8
        font_size: 20
        size: self.texture_size
        text:'You input a year and calculate if it is/was a leap year.'
        pos: 10, root.height * .8
    TextInput:
        hint_text: 'e.g 2020'
        color: 0, 0 , 0 ,1
        font_size: 30
        size: 370, 45
        id: text
        multiline: False
        pos: 14, root.height * .72
    Button:
        size: 50, 45
        text: '-->'
        font_size: 40
        color: 0, 1, 0, .7
        on_release: root.calculate()
        pos: 386, root.height * .72
    Label:
        size: 600, 60
        font_size: 30
        pos: root.width/2 - self.width/2, 300
        id: label
